{
  "name": "collaborative-drawing",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "tsc -p tsconfig.client.json",
    "start": "npm run build && node dist/server/index.js",
    "dev": "npm run build:client && tsx server/index.ts",
    "dev:watch": "concurrently \"tsc -p tsconfig.client.json --watch\" \"tsx watch server/index.ts\"",
    "watch": "concurrently \"tsc --watch\" \"tsc -p tsconfig.client.json --watch\"",
    "clean": "rm -rf dist dist-client",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
